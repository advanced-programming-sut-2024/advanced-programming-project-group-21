<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200" prefWidth="300" stylesheets="@../CSS/VboxStyle.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.AuthenticationCode.AuthenticationMenuViewController">
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="340.0" spacing="30.0" styleClass="vbox">
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="56.0" prefWidth="300.0" styleClass="label" text="Please check your email and enter the code we've sent" />
        <TextField fx:id="confirmLogin" promptText="Enter the 6 digit code here" styleClass="text-field" />
        <Button onMouseClicked="#confirmChecked" mnemonicParsing="false" prefHeight="25.0" prefWidth="58.0" styleClass="button" text="Check" />
    </VBox>
</AnchorPane>
