<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="750" prefWidth="1500" stylesheets="@../CSS/VboxStyle.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.Login.LoginMenuViewController">
    <VBox alignment="CENTER" layoutX="600.0" layoutY="125.0" prefHeight="500.0" prefWidth="300.0" spacing="20.0"
          styleClass="vbox">
        <Label fx:id="topText" styleClass="titles" text="Welcome"/>
        <TextField fx:id="usernameField" alignment="CENTER" promptText="Enter username" styleClass="textFields"/>
        <PasswordField fx:id="passwordField" alignment="CENTER" promptText="Enter password" styleClass="textFields"/>
        <VBox alignment="CENTER" prefHeight="45.0" prefWidth="200.0" spacing="5.0">
            <children>
                <Button mnemonicParsing="false" onMouseClicked="#loginClicked" prefWidth="60.0" styleClass="buttons"
                        text="Login"/>
                <Hyperlink onMouseClicked="#goToQuestion" text="Forgot password"/>
            </children>
        </VBox>
        <Label alignment="BOTTOM_CENTER" contentDisplay="CENTER" prefHeight="28.0" prefWidth="93.0" styleClass="texts"
               text="Not a user?"/>
        <Hyperlink onMouseClicked="#goToRegister" text="Register as a new user..."/>
        <Button mnemonicParsing="false" onMouseClicked="#Exit" prefWidth="60.0" styleClass="buttons" text="Exit"/>
    </VBox>
</AnchorPane>
