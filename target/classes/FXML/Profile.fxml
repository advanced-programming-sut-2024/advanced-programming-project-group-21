<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="pane" prefHeight="750" prefWidth="1500" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.Profile.ProfileMenuViewController" stylesheets="@../CSS/VboxStyle.css">
    <VBox fx:id="vbox" alignment="BOTTOM_CENTER" layoutX="648.0" layoutY="94.0" prefHeight="562.0" prefWidth="218.0"
          spacing="50.0" styleClass="vbox">
        <VBox alignment="CENTER" prefHeight="313.0" prefWidth="218.0" spacing="20.0">
            <Label text="Change info"/>
            <VBox alignment="TOP_CENTER" prefHeight="106.0" prefWidth="148.0" spacing="7.0">
                <Button fx:id="usernameButton" alignment="CENTER" contentDisplay="RIGHT"
                        mnemonicParsing="false" onMouseClicked="#openChangeUsername"
                        text="Change username" styleClass="button"/>
                <Button alignment="CENTER" contentDisplay="RIGHT"
                        mnemonicParsing="false" onMouseClicked="#openChangeNickname"
                        text="Change nickname" styleClass="button"/>
                <Button alignment="CENTER" contentDisplay="RIGHT"
                        mnemonicParsing="false" onMouseClicked="#openChangeEmail" prefHeight="17.0"
                        prefWidth="112.0" text="Change email" styleClass="button"/>
                <Button contentDisplay="RIGHT" mnemonicParsing="false"
                        onMouseClicked="#openChangePassword" text="Change password" styleClass="button"/>
            </VBox>
        </VBox>
        <VBox alignment="TOP_CENTER" prefHeight="193.0" prefWidth="218.0" spacing="10.0">
            <Label prefHeight="30.0" prefWidth="138.0" text="Answer security questions"/>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="7.0"></VBox>
            <Button mnemonicParsing="false" onMouseClicked="#goToQuestionMenu" text="Enter menu" styleClass="button"/>
        </VBox>
        <VBox alignment="TOP_CENTER" prefHeight="79.0" prefWidth="218.0" spacing="10.0">
            <Label alignment="CENTER" prefHeight="18.0" prefWidth="140.0" text="Accessing information" styleClass="label"/>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="7.0"></VBox>
            <Button mnemonicParsing="false" onMouseClicked="#goToUserInfoMenu" text="Enter menu" styleClass="button"/>
        </VBox>
        <VBox alignment="TOP_CENTER" prefHeight="122.0" prefWidth="218.0" spacing="10.0">
            <Label alignment="CENTER" prefHeight="18.0" prefWidth="140.0" text="Game history" styleClass="label"/>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="7.0"></VBox>
            <TextField fx:id="gameHistoryTextField" prefHeight="26.0" prefWidth="100.0"
                       promptText="enter number of games " styleClass="text-field"/>
            <Button mnemonicParsing="false" onMouseClicked="#goToGameHistoryInfoMenu" text="Enter menu" styleClass="button"/>
        </VBox>
    </VBox>
    <Button layoutX="14.0" layoutY="709.0" mnemonicParsing="false" onMouseClicked="#goToMainMenu" prefHeight="26.0"
            prefWidth="110.0" text="Back" styleClass="button"/>
</AnchorPane>
